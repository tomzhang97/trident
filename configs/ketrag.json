{
  "mode": "ketrag",
  "safe_cover": {
    "per_facet_alpha": 0.01,
    "token_cap": 2000,
    "early_abstain": true,
    "fallback_to_pareto": true
  },
  "pareto": {
    "budget": 2000,
    "relaxed_alpha": 0.5,
    "use_vqc": true,
    "use_bwk": true,
    "max_vqc_iterations": 3
  },
  "llm": {
    "model_name": "meta-llama/Llama-2-7b-hf",
    "temperature": 0.0,
    "max_new_tokens": 256,
    "load_in_8bit": false
  },
  "retrieval": {
    "method": "dense",
    "encoder_model": "facebook/contriever",
    "top_k": 100
  },
  "nli": {
    "model_name": "microsoft/deberta-v2-xlarge-mnli",
    "batch_size": 32
  },
  "baselines": {
    "common_k": 8,
    "ketrag_k": 8,
    "ketrag_skeleton_ratio": 0.3,
    "ketrag_max_skeleton_triples": 10,
    "ketrag_max_keyword_chunks": 5
  },
  "comments": {
    "ketrag_skeleton_ratio": "Ratio of top chunks to use for skeleton KG construction (0.3 = 30%)",
    "ketrag_max_skeleton_triples": "Maximum knowledge graph triples to use from skeleton",
    "ketrag_max_keyword_chunks": "Maximum chunks to retrieve from keyword-chunk bipartite graph"
  },
  "evaluation": {
    "metrics": ["em", "f1"],
    "dataset": "hotpotqa"
  }
}
