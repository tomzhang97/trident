{
  "mode": "safe_cover",
  "safe_cover": {
    "per_facet_alpha": 0.01,
    "coverage_threshold": 0.15,
    "token_cap": 2500,
    "dual_tolerance": 1e-6,
    "early_abstain": true,
    "use_certificates": true,
    "monitor_drift": false,
    "fallback_to_pareto": true
  },
  "pareto": {
    "budget": 2500,
    "relaxed_alpha": 0.5,
    "use_vqc": false,
    "use_bwk": false
  },
  "llm": {
    "model_name": "meta-llama/Llama-2-7b-hf",
    "temperature": 0.0,
    "max_new_tokens": 256,
    "load_in_8bit": false
  },
  "retrieval": {
    "method": "dense",
    "encoder_model": "facebook/contriever",
    "top_k": 100
  },
  "nli": {
    "model_name": "microsoft/deberta-v2-xlarge-mnli",
    "batch_size": 32,
    "score_threshold": 0.9
  },
  "calibration": {
    "method": "isotonic",
    "use_mondrian": true,
    "reliability_table_size": 20
  },
  "evaluation": {
    "metrics": ["em", "f1", "support_em", "support_f1", "faithfulness"],
    "dataset": "musique",
    "save_predictions": true,
    "save_certificates": true
  },
  "baselines": {
    "common_k": 8,
    "selfrag_k": 8,
    "selfrag_use_critic": false,
    "selfrag_allow_oracle_context": false,
    "graphrag_k": 8,
    "graphrag_topk_nodes": 20,
    "graphrag_max_seeds": 10,
    "graphrag_max_hops": 2,
    "ketrag_k": 8,
    "ketrag_skeleton_ratio": 0.3,
    "ketrag_max_skeleton_triples": 10,
    "ketrag_max_keyword_chunks": 5
  }
}
