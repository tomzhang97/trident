{
  "mode": "safe_cover",
  "safe_cover": {
    "per_facet_alpha": 0.2,
    "coverage_threshold": 0.15,
    "token_cap": 4000,
    "max_evidence_tokens": 4000,
    "max_units": 16,
    "dual_tolerance": 1e-6,
    "early_abstain": true,
    "abstain_on_infeasible": true,
    "use_certificates": true,
    "monitor_drift": false,
    "psi_threshold": 0.5,
    "fallback_to_pareto": false,
    "pvalue_mode": "deterministic",
    "per_facet_configs": {
      "default": {"max_tests": 3},
      "ENTITY": {"max_tests": 3},
      "RELATION": {"max_tests": 3},
      "TEMPORAL": {"max_tests": 3},
      "NUMERIC": {"max_tests": 3},
      "BRIDGE_HOP": {"max_tests": 3}
    }
  },
  "pareto": {
    "budget": 2000,
    "relaxed_alpha": 0.5,
    "use_vqc": false,
    "use_bwk": false
  },
  "llm": {
    "model_name": "meta-llama/Meta-Llama-3-8B-Instruct",
    "temperature": 0.0,
    "max_new_tokens": 256,
    "load_in_8bit": false
  },
  "retrieval": {
    "method": "dense",
    "encoder_model": "facebook/contriever",
    "top_k": 100
  },
  "nli": {
    "model_name": "microsoft/deberta-v2-xlarge-mnli",
    "batch_size": 32,
    "score_threshold": 0.9
  },
  "calibration": {
    "method": "conformal",
    "version": "v2.2",
    "use_mondrian": true,
    "n_min": 25,
    "facet_types": ["ENTITY", "RELATION", "TEMPORAL", "NUMERIC", "BRIDGE_HOP"],
    "pvalue_mode": "deterministic"
  },
  "evaluation": {
    "metrics": ["em", "f1", "support_em", "faithfulness"],
    "dataset": "hotpotqa",
    "save_predictions": true,
    "save_certificates": true
  }
}
